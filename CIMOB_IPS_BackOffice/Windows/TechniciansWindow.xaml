<Window x:Class="CIMOB_IPS_BackOffice.Windows.TechniciansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CIMOB_IPS_BackOffice.Windows"
        mc:Ignorable="d"
        Title="CIMOB IPS BackOffice - Técnicos" Height="750" Width="520">
    <StackPanel Margin="10">
        <Label>Convites Pendentes</Label>
        <DataGrid Name="DtPendingInvites" 
                  VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Height="200" 
                  SelectionMode="Extended" SelectionUnit="FullRow"
                  IsReadOnly="True" AutoGeneratedColumns="DtPendingInvites_AutoGeneratedColumns"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False"
                  ItemsSource="{Binding PendingInvites}"></DataGrid>
        <Button Margin="0 10" Width="70" HorizontalAlignment="Left" IsEnabled="True" Name="BtnRemoveInvites" Click="BtnRemoveInvites_Click">Remover</Button>
        <Label>Técnicos</Label>
        <DataGrid Name="DtTechnicians" 
                  VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Height="350" 
                  SelectionMode="Extended" SelectionUnit="FullRow"
                  IsReadOnly="True" AutoGeneratedColumns="DtTechnicians_AutoGeneratedColumns"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False"
                  ItemsSource="{Binding Technicians}"></DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button Margin="0 10 10 10" Width="70" HorizontalAlignment="Left" Name="BtnActivate" Click="BtnActivate_Click">Activar</Button>
            <Button Margin="0 10" Width="70" HorizontalAlignment="Left" Name="BtnDeactivate" Click="BtnDeactivate_Click">Desactivar</Button>
        </StackPanel>
    </StackPanel>
</Window>
