@model CIMOB_IPS.Models.ViewModels.ContactsViewModel

@{
    ViewData["Title"] = "Contactos";

    var orderedCoordenators = Model.Coordenators.OrderBy(c => c.IdCourseNavigation.Name);
    var orderedTechnicians = Model.Technicians.OrderBy(t => t.Name);
}

<link rel="stylesheet" href='@Url.Content("~/css/registo.css")' />

<h2 class="page-title">Coordenadores de curso</h2>

<div class="main-container-contacts">

    @foreach (var item in orderedCoordenators)
    {
        <div class="tableContact">
            <img src="~/images/course.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.IdCourseNavigation.Name)<br />
            <img src="~/images/name.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.Name) <br />
            <img src="~/images/email.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.Email)  <br />
            @if (item.Telephone != null)
            {
                <img src="~/images/telephone.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.Telephone)<br />
            }
        </div>
    }

</div>

<h2 class="page-title">Técnicos do CIMOB</h2>

<div class="main-container-contacts">
    @foreach (var item in orderedTechnicians)
    {
        <div class="tableContact">
            <img src="~/images/name.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.Name)<br />
            <img src="~/images/email.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.IdAccountNavigation.Email)<br />
            <img src="~/images/telephone.png" class="icon-img" draggable="false" /> @Html.DisplayFor(model => item.Telephone)<br />
        </div>
    }
</div>