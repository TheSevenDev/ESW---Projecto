@model CIMOB_IPS.Models.UserViewModel;

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href='@Url.Content("~/css/registo.css")' />


<div class="middleSquare" hidden="hidden">
    <h2>Registo</h2>
    <div>
        <form asp-action="PreRegister">
            <table>
                <tr>
                    <td><label asp-for="Student.StudentNum"></label></td>
                    <td><input asp-for="Student.StudentNum" type="text" /></td>
                    <td><span asp-validation-for="Student.StudentNum" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td><input type="submit" value="Enviar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>

<div class="middleSquare" >
    <h2>Registo</h2>
    <div>
        <form asp-action="RegisterStudent">
            <table>
                <tr>
                    <td><label asp-for="Student.Name"></label></td>
                    <td><input asp-for="Student.Name" /></td>
                    <td><span asp-validation-for="Student.Name" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Student.Cc"></label></td>
                    <td><input asp-for="Student.Cc" type="text" /></td>
                    <td><span asp-validation-for="Student.Cc" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Student.Telephone"></label></td>
                    <td><input asp-for="Student.Telephone" type="text" /></td>
                    <td><span asp-validation-for="Student.Telephone" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Student.IdNationality"></label></td>
                    <td><select asp-for="Student.IdNationality" asp-items="ViewBag.IdNationality"><option value=1>Portugal</option></select></td>
                    <td><span asp-validation-for="Student.IdNationality" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label for="school" name="labelSchool">Escola:</label></td>
                    <td><select name="school"><option value=1>Escola Superior de Tecnologia de Setúbal</option></select></td>
                </tr>
                <tr>
                    <td><label asp-for="Student.IdCourse"></label></td>
                    <td><select asp-for="Student.IdCourse" asp-items="ViewBag.IdCourse"><option value=1>Licenciatura em Engenharia Informática</option></select></td>
                    <td><span asp-validation-for="Student.IdCourse" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Student.Credits"></label></td>
                    <td><input asp-for="Student.Credits" type="text" /></td>
                    <td><span asp-validation-for="Student.Credits" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Account.Password"></label></td>
                    <td><input asp-for="Account.Password" type="password"/></td>
                    <td><span asp-validation-for="Account.Password" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label for="passwordConfirmation" name="labelPasswordConfirmation"></label>Confirme a Password:</td>
                    <td><input type="password" name="passwordConfirmation"/></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td><input type="submit" value="Registar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>

<div class="middleSquare" hidden="hidden">
    <h2>Registo</h2>
    <div>
        <form asp-action="RegisterTechnician">
            <table>
                <tr>
                    <td><label asp-for="Technician.Name"></label></td>
                    <td><input asp-for="Technician.Name" /></td>
                    <td><span asp-validation-for="Technician.Name" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Technician.Telephone"></label></td>
                    <td><input asp-for="Technician.Telephone" type="text" /></td>
                    <td><span asp-validation-for="Technician.Telephone" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td><input type="submit" value="Registar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


