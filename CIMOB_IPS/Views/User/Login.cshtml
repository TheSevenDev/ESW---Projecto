@model CIMOB_IPS.Models.Account
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href='@Url.Content("~/css/registo.css")' />

<h2 class="page-title-login">Autenticar</h2>
<div class="main-container-login">
    <form asp-action="ExecLoginAsync" class="login-form">
        <table>
            <tr>
                <td><label asp-for="Email" class="login-formlabel"></label></td>
            </tr>
            <tr>
                <td><input asp-for="Email" placeholder="exemplo@dominio.com" /></td>
            </tr>
            <tr>
                <td><span asp-validation-for="Email" class="error-message"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password" class="login-formlabel"></label></td>
            </tr>
            <tr>
                <td><input asp-for="Password" placeholder="***************" /></td>
            </tr>
            <tr>
                <td><span asp-validation-for="Password" class="error-message"></span></td>
            </tr>
            <tr>
                <td></td>
            </tr>
        </table>

        
        <a asp-area="" asp-controller="Home" asp-action="Index">Esqueceu-se da palavra-passe?</a>
        <div class="form-error">
            <label >@ViewData["Login-Message"]</label>
        </div>
        <input type="submit" value="Autenticar" class="submitButton" />
    </form>
</div>
