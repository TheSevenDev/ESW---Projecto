@{ 
    ViewData["Controller"] = this.ViewContext.RouteData.Values["controller"].ToString();
    ViewData["Action"] = this.ViewContext.RouteData.Values["action"].ToString();

    // = HelpController.GetHelpInformation(controller, action);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CIMOB-IPS</title>

        <link rel="stylesheet" href="~/css/site.css" />

        <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
</head>
<body>
    <nav>
        @Html.Partial("SessionBar")
        <div class="navbar-menu">
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="About">Programa</a>
                <ul class="sub-menu">
                <li><a asp-area="" asp-controller="Home" asp-action="About">Instituições</a></li>
                <li></li>
                </ul></li>

                @if (User.Identity.IsAuthenticated)
                {

                    @if (User.IsInRole("estudante"))
                    {
                    <li><a asp-area="" asp-controller="Home" asp-action="About">Candidatura</a>
                        <ul class="sub-menu">
                            <li><a asp-area="" asp-controller="Home" asp-action="About">Iniciar Candidatura</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">Minhas Candidaturas</a></li>
                            <li></li>
                        </ul>
                    </li>
                    }
                    @if (User.IsInRole("tecnico") || User.IsInRole("tecnico_admin"))
                    {
                    <li><a asp-area="" asp-controller="Home" asp-action="About">Listagens</a>
                        <ul class="sub-menu">
                            <li><a asp-area="" asp-controller="Home" asp-action="About">Candidaturas</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">Mobilidades</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">Emergências</a></li>
                            <li></li>
                        </ul>
                    </li>
                    }
                }

                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contactos</a></li>
            </ul>

      
            @if (User.Identity.IsAuthenticated)
            {    <img class="option-button" id="help" src="~/images/icons/002-question-mark.png" onclick="javascript: toogleHelp();" />
                 <img class="option-button" id="notifications" src="~/images/icons/001-notifications-button.png" onclick="javascript: toogleNotifications();" />
                 <img class="option-button" id="options" src="~/images/icons/003-settings-work-tool.png" onclick="javascript: toogleSettings();" />
            }
            else
            {
                <img class="option-button" id="help" style="margin-right: 1vw;" src="~/images/icons/002-question-mark.png" onclick="javascript: toogleHelp();" />
            }
        </div>

        <div class="menu-settings" id="submenu-settings">
            <ul>  
                <li> <a asp-area="" asp-controller="Profile" asp-action="Index">Perfil</a> </li>     
                <li> <a asp-area="" asp-controller="Home" asp-action="Index">Alterar-palavra-passe</a></li>
                @if (User.IsInRole("tecnico") || User.IsInRole("tecnico_admin"))
                {
                    <li> <a asp-area="" asp-controller="Account" asp-action="Tecnicos">Técnicos</a></li>
                }
                <li> <a asp-area="" asp-controller="Login" asp-action="Logout">Sair</a></li>           
            </ul>
        </div>

        <div class="notifications" id="submenu-notifications">
            <ul>
                <li> <a asp-area="" asp-controller="Home" asp-action="Index">SAMONASTANASTANASTaaI</a> </li>
                <li> <a asp-area="" asp-controller="Home" asp-action="Index">Candidatura submetida a 16/11/2017</a> </li>
            </ul>
        </div>
    </nav>
    <div id="fade-background" onclick="javascript: toogleHelp();"></div>
    <img id="help-close" src="~/images/icons/error.png" onclick="javascript: toogleHelp();" />   
    <div id="help-content">
        @await Html.PartialAsync("/Views/Help/_Help.cshtml")
    </div>


    <div class="body-panel" onclick="javascript: hideMenus();">
        <img style="position:fixed; margin-left:83.5vw;margin-top:74vh;width:15vmax; height:4.5vmax; opacity:0.7;" src="~/images/cimobips.png" />
        @RenderBody()
    </div>
        <footer>
            <p>&copy; @DateTime.Now.Year &nbsp; CIMOB - Instituto Politécnico de Setúbal</p>         
        </footer>

    @RenderSection("Scripts", required: false)

    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
