@model IEnumerable<CIMOB_IPS.Models.Mobility>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href='@Url.Content("~/css/registo.css")' />
<link rel="stylesheet" href='@Url.Content("~/css/site.css")' />
<link rel="stylesheet" href='@Url.Content("~/css/application.css")' />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h2 class="page-title" style="margin-top:1%;">Mobilidades Encarregue</h2>
<h3 class="page-title" style="margin-top:3%; font-size:1.1vmax">Tem @Model.Count() mobilidades encarregue</h3>

<form id="search-application" style="margin-left:43%;margin-top:7%;">
    <input type="search" name="search_by" placeholder="Procurar.." value="@ViewData["search-by"]" />
    <button type="submit"><i class="fa fa-search"></i></button>
</form>
@if (Model.Count() == 0)
{
    <div class="main-application-container" style="padding:1vw;">
        <p>Não existem mobilidades encarregue!</p>
    </div>
}
else
{
    <div class="applcations-container">
        @foreach (var item in Model)
        {
            <br />
            <div class="main-application-container" style="margin-top:1%;">
                <fieldset style="border:0px">
                    <legend style="text-align:center;font-size:1.3vmax; margin-top: 2%;">
                        <a class="profileLink" onclick="viewProfile(@item.IdApplicationNavigation.IdStudentNavigation.IdStudent)">@Html.DisplayFor(modelItem => item.IdApplicationNavigation.IdStudentNavigation.Name)</a>
                    </legend>

                    <div style="margin-left:2.5%;">
                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdApplicationNavigation.IdStudentNavigation.StudentNum): </b>
                            @Html.DisplayFor(modelItem => item.IdApplicationNavigation.IdStudentNavigation.StudentNum)
                        </p>

                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.IdProgramTypeNavigation.Name): </b>
                            @Html.DisplayFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.IdProgramTypeNavigation.Name)
                        </p>

                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdOutgoingInstitutionNavigation): </b>
                            <a target="_blank" class="profileLink" href=@item.IdOutgoingInstitutionNavigation.Hyperlink>@Html.DisplayFor(modelItem => item.IdOutgoingInstitutionNavigation.Name)</a>
                        </p>

                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.MobilityBeginDate): </b>
                            @Html.DisplayFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.MobilityBeginDate)
                        </p>

                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.MobilityEndDate): </b>
                            @Html.DisplayFor(modelItem => item.IdApplicationNavigation.IdProgramNavigation.MobilityEndDate)
                        </p>

                        <p>
                            <b>@Html.DisplayNameFor(modelItem => item.IdStateNavigation.Description): </b>
                            @Html.DisplayFor(modelItem => item.IdStateNavigation.Description)
                        </p>

                    </div>
                </fieldset><br />
            </div>
        }
    </div>
}
